      </form>

      <ul class="navbar-nav">
        <li class="nav-item">
          <a style="color: white; font-weight: bold; font-family: cursive; text-decoration: none;" class="btn btn-link" href="/shop-page">Shop <i class="bi bi-handbag"></i></a>
        </li>
        <li class="nav-item">
          <a style="color: white;" class="btn btn-link" href="/cart"><i style="font-size: 25px;" class="bx bxs-cart icon-single"></i></a>
        </li>

        <li class="nav-item">
          <a style="color: white;" class="btn btn-link" href="/wishlist"><i class="bi bi-bag-heart-fill"></i></a>
        </li>
      

        <li class="nav-item">
          {{#if userstatus}}
          <a class="btn btn-warning" href="/userProfile">{{username}}</a>
          {{else}}
          <a class="btn btn-warning" href="/login"><i class="bx bxs-user-circle mr-1"></i> Log In</a>
          {{/if}}
        </li>
      </ul>
    </div>

  </div>
</nav>
 
