<div style="position: fixed; width: 100%; z-index: 50;" class="search-bar d-block d-md-none bg-dark">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <form class="form-inline mb-3 mx-auto">
          <input class="form-control" type="search" placeholder="Search for products..." aria-label="Search"  style="width: 318px;">
          <button  style="background-color: #F26522;" class="btn " type="submit"><i class="bx bx-search"></i></button>
        </form>
      </div>
    </div>
  </div>
</div>
{{#if status}}
<section  >
  <div class="container py-5">
    <div class="row">
         {{#each result}}
      <div class="col-md-6 col-lg-4 mb-2 mb-lg-0" >
        <div  class="card" style="box-shadow:0px 0px 4px 0px rgb(123, 123, 123);">
         <a style="text-decoration: none; color: black;" href="/productDetails/{{this._id}}"> 
         <div style="display: flex;justify-content: center;">
          <img style="height: 200px; width: 200px; padding-top: 5px;"  src="/product_img/{{this.main_image.[0].filename}}"
            class="card-img-top" alt="Laptop" /></div></a>
           <div class="card-body">
        <h5 style=" text-align: center; " class="card-title">{{this.productname}}</h5>
        <h4 style=" text-align: center;" class="card-title">Rs.{{this.price}}</h4>
       
      <div style="display: flex;justify-content: center;">
        <a href="/addToCart/{{this._id}}"><input align="center" type="submit" class=" btn btn-warning" value="Add to cart"></a>
       {{#if this.wlStatus}}
        <a href="/deleteWishlist/{{this._id}}"><i style="font-size: 25px; margin-top: -10px; color: red;" class="bi bi-heart-fill btn pl-3" ></i></a>
       {{else}}
        <a href="/addToWishlist/{{this._id}}"><i style="font-size: 25px; margin-top: -10px;" class="bi bi-heart btn pl-3" ></i></a>
        {{/if}}
      </div>
      </div>
        </div>
      </div>
     {{/each}}
     
    </div>
  </div>
</section>
 

