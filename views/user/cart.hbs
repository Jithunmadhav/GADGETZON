     axios.get('/quantityInc/'+proId).then((response)=>{
     if(response?.data?.cartQty==undefined){
      
       }else{
         let Qty=document.getElementById(qtud).value
        console.log(Qty)
        console.log(response )
         document.getElementById(proId).value=response.data.cartQty
         document.getElementById('totalPrice').innerHTML=response.data.calc
           console.log(response.data.calc)
      
      
       }
      
      
    }).catch(err=>{
      console.log(err)
    })
}

    </script>

    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"
    ></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
    ></script>
  </body>
</html>