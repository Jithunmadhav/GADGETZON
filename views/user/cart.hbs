<html lang="en" ng-app="wishlist">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>GadgetZon</title>
     <link rel="shortcut icon" href="\images\online-shopping.png">
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@2.0.2/css/boxicons.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/user/homestyle.css">

  </head>

  <body style="background-color: #F5F5F5;">
    <nav
      class="navbar navbar-expand-md navbar-dark bg-dark main-menu sticky-top"
      style=" box-shadow:none;;
    width: 100%; z-index:100;"
    >
      <div class="container">
        <a class="navbar-brand" href="/home">
          <h4 class="font-weight-bold"><h3>Gadget<font
                color="#FFD523"
              >Zon</font></h3></h4>
        </a>

        <ul style=" flex-direction: row;" class="navbar-nav ml-auto   d-md-none">
           <li class="nav-item">
          <a style="color: white; font-weight: bold; font-family: cursive; text-decoration: none;" class="btn btn-link" href="/shop-page">Shop <i class="bi bi-handbag"></i></a>
        </li>
         <li class="nav-item">
          <a style="color: white;" class="btn btn-link" href="/wishlist"><i class="bi bi-bag-heart-fill"></i></a>
        </li>
        </ul>

        <div class="collapse navbar-collapse">
          <form class="form-inline my-2 my-lg-0 mx-auto" action="/search-product" role="search">
            <input
              class="  searchsize"
              name="productname"
              type="search"
              placeholder="Search for products..."
              aria-label="Search"
             
            />
            <button
              style="background-color: #F26522; height: 40px;"
              class="btn my-2 my-sm-0"
              type="submit"
            ><i class="bx bx-search"></i></button>
          </form>

          <ul class="navbar-nav">
             <li class="nav-item">
          <a style="color: white; font-weight: bold; font-family: cursive; text-decoration: none;" class="btn btn-link" href="/shop-page">Shop <i class="bi bi-handbag"></i></a>
        </li>
            <li class="nav-item">
              <a style="color: white;" class="btn btn-link" href="/wishlist"><i
                  style="font-size: 20px;"
                  class="bi bi-bag-heart-fill"
                ></i></a>

            </li>

          </ul>
        </div>

      </div>
    </nav>

    <div class="search-bar d-block d-md-none bg-dark">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <form class="form-inline mb-3 mx-auto" action="/search-product" role="search">
              <input
                class="form-control"
                type="search"
                name="productname"
                placeholder="Search for products..."
                aria-label="Search"
                style="width: 288px;"
              />
              <button  style="background-color: #F26522; height: 40px;" class="btn "  type="submit"><i class="bx bx-search"></i></button>
            </form>
          </div>
        </div>
      </div>
    </div>

    {{#if count}}
      <div
        style="    height: 370px;
    margin-top: 78px;
    width: 100%;
    display: flex;
    justify-content: center;"
      ><img
          src="/images/empty-cart-5521508-4610092.webp"
          class="img-fluid"
          alt=""
        /></div>
      
        <div style="margin-top: -15px; display: flex; justify-content: center;"><a style="text-decoration: none; color: black;" class="btn btn-outline-warning" href="/shop-page"><h2 style="text-align: center;">Starts Shopping</h2></a></div>
    {{else}}

      <section class="pt-5 pb-5">
        <div class="container">
          <div class="row w-100">
            <div class="col-lg-12 col-md-12 col-12">
              <h3 class="display-5 mb-2">Shopping Cart</h3>
              <p class="mb-5">
                <i class="text-info font-weight-bold">{{cartCount}}</i>
                items in your cart</p>
            
              <table
                id="shoppingCart"
                class="table table-condensed table-responsive"
              >
                <thead>
                  <tr>
                    <th style="width:30%">Product</th>
                    <th style="width:30%">Product name</th>
                    <th style="width:12%">Price</th>
                    <th style="width:10%">Quantity</th>
                    <th style="width:16%"></th>
                  </tr>
                </thead>
                <tbody>
                  {{#each result}}
                    <tr style="height: 130px;">
                       
                      <td data-th="Product">
                        <div class="row">
                          <div class="col-md-6 col-12">
                            <img
                              style="width: 70px; height: 70px;"
                              src="{{this.main_image.0.url}}"
                              alt=""
                              class="img-fluid"
                            />
                          </div>

                        </div>
                        {{#if this.pdtStatus}}
                 <h6 style="color: rgb(245, 64, 64); font-family: cursive;">Only {{this.quandity}} stock's left</h6>

                        {{/if}}
                      </td>
                      <td>
                        <h6>{{this.productname}}</h6>
                       
                      </td>
                       
                      <td data-th="Price">{{this.price}}</td>

                      <td data-th="Quantity">
                        <div style="display: flex;">
                        
                          <input type="hidden" id="{{this.quandity}}" value="{{this.quandity}}">
                          <button  class="btn btn-dark" onclick="qtyDec('{{this._id}}','{{this.quandity}}','{{this.price}}')">-</button>
                          <input
                            type="text"
                            id="{{this._id}}"
                            class="form-control text-center"
                            style="width: 50px;"
                            readonly
                            value="{{this.cartQuantity}}"
                          />
                           
                             <button  class="btn btn-dark" onclick="qtyInc('{{this._id}}','{{this.quandity}}','{{this.price}}')">+</button>
                        </div>

                      </td>

                      <td class="actions" data-th="">

                         <a style="text-decoration: none; color: black;" href="/cartProductDelete/{{this._id}}"  class="btn btn-white border-secondary bg-white btn-md mb-2"> <i class="fas fa-trash"></i></a>
                       
                      </td>
                      
                       
                    </tr>
                     
                  {{/each}}
                </tbody>
                
              </table>
                 
              <div class="float-right text-right">
                <h4>Total:</h4>
                <div style="display: flex;">
                <h1 ><i style="font-size: 25px; position: relative; top: 9px;"class="bi bi-currency-rupee" ></i><h2 id="totalPrice">{{totalPrice}}</h2> </h1>

                </div>
              </div>
            </div>
          </div>
          <div class="row mt-4 d-flex align-items-center">
            <div class="col-sm-6 order-md-2 text-right">
              <a
                href="/checkout"
                class="btn btn-warning mb-4 btn-lg pl-5 pr-5"
              >Checkout</a>
              
            </div>
            <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
              <a href="/shop-page">
                <i class="fas fa-arrow-left mr-2"></i>
                Continue Shopping</a>
            </div>
          </div>
        </div>
      </section>

    {{/if}}
