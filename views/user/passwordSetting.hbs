      <title>GadgetZon</title>
     <link rel="shortcut icon" href="\images\online-shopping.png">
  </head>
  <body>
    <section class="h-100 gradient-custom">
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <h2
              style="justify-content: center;
    display: flex;"
              class="fw-bold mb-3 text-white-50"
            >Gadget<font color="#FFD523">Zon</font></h2>
            <div
              class="card text-white"
              style="border-radius: 1rem;
                     background-color: #F5F5F5;
                     height: 433px;
                     width: 500px;
                     padding-top: 0px;
                     flex-direction: row;
                     margin-top: 85px;"
            >
              <div class="card-body p-5 text-center">

                <div class="mb-md-5 mt-md-4 pb-5">
                  <form style="margin-top: -35px" action="/pwdSetting" method="post">
                <h2 class="fw-bold mb- text-uppercase font-color">Create new password</h2><hr style="background-color: black;">

                  <div class="form-outline form-white font-color mb-2">
                    <label style="margin-left: -300px;" class="mb-2">New password</label>
                     <input
                      class="form-control form-control-lg"
                      type="password"
                      name="newpassword"
                      id="otpverify"
                     
                      required
                    /><br />
                   <label style="margin-left: -300px;">Password again</label>

                    <input
                      class="form-control form-control-lg"
                      type="password"
                      name="confirmPassword"
                      id="otpverify"
                     
                      required
                    /><br />
                     <button
                    class="btn btn-warning btn-lg px-5"
                    type="submit"
                  >Save changes & signIn</button><br /><br />
            
                  </form>
                  </div>
                  </div>

                  

                 
                </div>
              </div>
            </div>
          </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
