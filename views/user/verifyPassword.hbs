<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/user/loginstyle.css" />
    <title>gadgetZone</title>
  </head>
  <body>
    <section class="h-100 gradient-custom">
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <h2
              style="justify-content: center;
    display: flex;"
              class="fw-bold mb-3 text-white-50"
            >Gadget<font color="#FFD523">Zon</font></h2>
            <div
              class="card text-white"
              style="border-radius: 1rem;
                     background-color: #F5F5F5;
                     height: 362px;
                     width: 500px;
                     padding-top: 0px;
                     flex-direction: row;
                     margin-top: 85px;"
            >
              <div class="card-body p-5 text-center">

                <div class="mb-md-5 mt-md-4 pb-5"> 
                    <form style="margin-top: -35px" action="/verifypwd" method="post">
                <h2 class="fw-bold mb- text-uppercase font-color">Verification required</h2><hr style="background-color: black;">
                  <p class="font-color mb-2">To continue, complete this verification step. We've sent an OTP to the email <font color="#3333ff" >{{result}}</font></p>
                    <p style="text-align: center; height: 30px; color: rgb(173, 14, 14);" id="countdown"></p>
                  <div class="form-outline form-white font-color mb-2">
                    
                     <input
                      class="form-control form-control-lg"
                      type="number"
                      name="otp"
                      id="otpverify"
                      placeholder="OTP "
                      required
                    /><br />
                    {{#if status}}
                  <h6 style="color: red; text-align: center;">Invalid OTP</h6>
                  {{/if}}
                  </div>
                  <button
                    class="btn btn-warning btn-lg px-5"
                    type="submit"
                  >signIn</button><br /><br />
                  
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
        let countdown=document.getElementById("countdown");
        let count=61;
        const coundownInterval = setInterval(() => {
          count--;
          countdown.innerText=" OTP Resend in "+count;
          checkOver()
        }, 1000);
        function checkOver(){
          if(count==0){
            clearInterval(coundownInterval)
            countdown.innerHTML=`
           
           <a href="/resendForgotOtp">Resend OTP</a>
            `
          }
        }
      </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

