<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@2.0.2/css/boxicons.min.css"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       <title>GadgetZon</title>
     <link rel="shortcut icon" href="\images\online-shopping.png">
  </head>
  <body>
  
    <section style="background-color: #eee;">
      <div class="container vh-100  py-5">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
              <ol
                class="breadcrumb mb-0"
                style="display: flex;  justify-content: space-between;"
              >
                {{! <li class="breadcrumb-item"><a href="/checkOut">Back</a></li> }}
                <li class="breadcrumb-item"><h4>Order History</h4></li>
                <div style="width: auto; float: left; margin-top: 5px;     margin-left: 40px;"  class="dropdown show">
  <a class=" drop-size btn border border-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
   orders
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="background-color: rgba(225, 227, 226, 0.9);">
      
    <a class="dropdown-item" href="/orderList/all">All</a>
    <a class="dropdown-item" href="/orderList/delivered">Delivered</a>
    <a class="dropdown-item" href="/orderList/notDelivered">Not Delivered</a>
    <a class="dropdown-item" href="/orderList/cancelled">Cancelled</a>
    {{!-- <a class="dropdown-item" href="/orderList/">Returned</a> --}}
   
  </div>
</div>
              </ol>
            </nav>
          </div>
        </div>
    {{#if count}}
    <h4 style="text-align: center; font-weight: bold; font-family: cursive;">You have no orders</h4>
    {{else}}

        <table class="table align-middle mb-0 bg-white container">

          <thead class="bg-light">
            <tr>
              <th>Order ID</th>

              <th>Product</th>

              <th>order status</th>
              <th></th>

            </tr>
          </thead>
          {{#each result}}
            <tbody>

              <tr>

                <td>

                  <p class="fw-normal mb-1">{{this._id}}</p>
                </td>

                <td>
                  <p class="fw-normal mb-1"><img
                      style="width: 50px; height: 50px;"
                      src="/product_img/{{this.products.0.main_image.0.filename}}"
                      alt=""
                    />
                    {{this.products.0.productname}}</p>
              
                </td>
                {{#if returnRequest}}
                <td>
                    <h5><span style="background-color: rgb(178, 175, 175);" class="badge   d-inline">Return Requested</span></h5>
                  </td>
                {{else}}
                {{#if returnConfirm}}
                <td>
                    <h5><span style="background-color: rgb(50, 168, 77);" class="badge   d-inline">Returned</span></h5>
                  </td>
                  {{else}}
                {{#if returnCancel}}
                <td>
                    <h5><span style="background-color: rgb(128, 138, 74);" class="badge   d-inline">Return cancelled</span></h5>
                  </td>
                  {{else}}
                {{#if cancelStatus}}
                 <td>
                    <h5><span style="background-color: rgb(242, 97, 44);" class="badge   d-inline">Cancelled</span></h5>
                  </td>
                   <td>
                  <a
                    style="color: black; text-decoration: none;"
                    href="/orderedProduct/{{this._id}}"
                  >
                    <h5><span class="badge badge-primary  d-inline">view
                      details</span></h5>
                  </a>

                </td>
                  {{else}}
                   {{#if orderStatus}}
                  <td>
                    <h5><span
                      class="badge badge-success  d-inline"
                    >Delivered</span></h5>
                  </td>
                   <td>
                  <a
                    style="color: black; text-decoration: none;"
                    href="/orderedProduct/{{this._id}}"
                  >
                    <h5><span class="badge badge-primary  d-inline">view
                      details</span></h5>
                  </a>

                </td>
                  {{/if}}
                {{#unless orderStatus}}
                  <td>
                    <h5><span class="badge badge-danger  d-inline"> 
                      pending</span></h5>
                  </td>
                   <td>
                  <a
                    style="color: black; text-decoration: none;"
                    href="/orderedProduct/{{this._id}}"
                  >
                    <h5><span class="badge badge-primary  d-inline">view
                      details</span></h5>
                  </a>

                </td>
                  {{! <td>Senior</td> }}
                {{/unless}}
                {{/if}}
                {{/if}}
                {{/if}}
                {{/if}}

               
                
              </tr>

            </tbody>
          {{/each}}
        </table>
      </div>
    </section>
    {{/if}}
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>

  </body>
</html>