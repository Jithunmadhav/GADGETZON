<div style="padding-left: 20px; padding-right: 20px; margin-top: 80px;">
<div style="float: right;"><a href="/admin/addcoupon" class="btn btn-outline-dark mb-2">Add coupon</a></div>
<table class="table table-top">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Coupon name</th>
      <th scope="col">Coupon code</th>
      <th scope="col">Discount amt</th>
      <th scope="col">Min purchace amt</th>
      <th scope="col">Created date</th>
      <th scope="col">Expiry date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each result}}
    <tr style="height: 80px; ">
      <td>{{this.couponName}}</td>
      <td>{{this.couponCode}}</td>
      <td>{{this.discountAmt}}</td>
      <td>{{this.minPurchaseAmt}}</td>
      <td style="width: 200px;">{{this.createdDate}}</td>
      <td  style="width: 200px;">{{this.expDate}}</td>
       {{#unless this.couponStatus }}
        <td><a href="/admin/listCoupon/{{this._id}}" onclick="return confirm('Are you sure to list {{this.couponName}}')" class="btn btn-dark">List coupon</a></td>
        {{else}}
        <td><a href="/admin/unlistCoupon/{{this._id}}" onclick="return confirm('Are you sure to unlist {{this.couponName}}')" class="btn btn-dark"> Unlist coupon</a></td>
        {{/unless}}
     
    </tr>
   {{/each}}
  </tbody>

</table></div>


