<div class="container" style="padding-left: 20px; padding-right: 20px; margin-top: 109px;">
        <div style="float: right;"><a href="/admin/addBanner" class="btn btn-outline-dark mb-2">Add banner</a></div>

<table class="table ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Banner name</th>
      <th scope="col">Image</th>
      <th scope="col">Action</th>
     
    </tr>
  </thead>
  <tbody>
    {{#each result}}
    <tr >
      <td>{{this.bannerName}}</td>
      <td><img style="width: 150px; height: 70px;" src="/product_img/{{this.main_image.[0].filename}}" alt=""></td>
      <td>
        {{!-- <a href="#" onclick="return confirm('Are you sure to delete {{this._id}}')"><i style="color: black; font-size: 30px;" class="bi bi-trash"></i></a> --}}
      
                          <button
                            type="button"
                            style="background-color: white;"
                            class="btn  btn-md mb-2"
                            data-toggle="modal"
                            data-target="#exampleModalCenter"
                          >
                           <i style="color: black; font-size: 30px;" class="bi bi-trash"></i>
                          </button>

                          <!-- Modal -->
                          <div
                            class="modal fade"
                            id="exampleModalCenter"
                            tabindex="-1"
                            role="dialog"
                            aria-labelledby="exampleModalCenterTitle"
                            aria-hidden="true"
                          >
                            <div
                              class="modal-dialog modal-dialog-centered"
                              role="document"
                            >
                              <div class="modal-content">

                                <div
                                  class="modal-body"
                                  style="display: flex; justify-content: center;"
                                >
                                  Are you sure to delete
                                </div>
                                <div
                                  style="display: flex; justify-content: center;"
                                  class="modal-footer"
                                >
                                  <button
                                    type="button"
                                    class="btn btn-dark"
                                    data-dismiss="modal"
                                  >Close</button>
                                  <a
                                    href="/admin/bannerDelete/{{this._id}}"
                                  ><button
                                      type="button"
                                      class="btn btn-danger"
                                      data-toggle="modal"
                                      data-target="#exampleModalCenter"
                                    >Delete</button></a>
                                  {{! <button type="button" class="btn btn-primary">Save changes</button> }}
                                </div>
                              </div>
                            </div>
                          </div>
      </td>
  
    </tr>
    {{/each}}
  </tbody>
</table></div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
