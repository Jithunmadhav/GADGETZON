<div style="padding-left: 20px; padding-right: 20px;" class=" table-top  ">
    <div style="float: right;"><a href="/admin/addProduct" class="btn btn-outline-dark mb-2">Add Product</a></div>

<table class="table ">
  <thead class="thead-dark ">
    <tr>
     
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Quantity</th>
      <th scope="col">brand</th>
       <th scope="col">Image</th>
       <th scope="col"></th>
       <th scope="col"></th>
       
    </tr>
  </thead>
  <tbody>
    {{#each data}}
    <tr>
    
      <td>{{this.productname}}</td>
      <td>{{this.price}}</td>
       <td>{{this.category}}</td>
      <td>{{this.quandity}}</td>
       <td>{{this.brand}}</td>
        {{!-- <td style="width: 300px;">{{this.discription}}</td> --}}
       
       <td><img style="width: 70px; height: 70px;" src="/product_img/{{this.main_image.[0].filename}}" alt=""></td>
        <td><a href="/admin/editProduct/{{this._id}}"><i class="bi bi-pencil-square pdtDelete"></i></a></td>

        {{#unless this.productStatus }}
        <td><a href="/admin/listProduct/{{this._id}}" onclick="return confirm('Are you sure to list {{this.fname}}')"><button class="btn btn-outline-dark">List product <i style="color: red;" ></i></button></a></td>
        {{else}}
        <td><a href="/admin/unlistProduct/{{this._id}}" onclick="return confirm('Are you sure to unlist {{this.fname}}')"><button class="btn btn-outline-dark">Unlist product <i style="color: red;" ></i></button></a></td>
        {{/unless}}
         {{!-- <td><a href="/admin/deleteProduct/{{this._id}} " onclick="return confirm('Are you want to delete {{this.productname}}')"><i class="bi bi-trash3-fill pdtDelete"></i></a></td> --}}
    </tr>
    {{/each}}
   
  </tbody>
</table></div>

